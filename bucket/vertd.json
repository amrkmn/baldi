            "$date = $release.published_at.ToString('yyyy.MM.dd')",
            "$sha = ($tag -replace 'nightly-', '').Substring(0,7)",
            "Write-Output \"$date.$sha|$tag\""
        ],
        "regex": "^(?<version>\\d{4}\\.\\d{2}\\.\\d{2}\\.[a-f0-9]{7})\\|(?<tag>.+)$"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/VERT-sh/vertd/releases/download/$matchTag/vertd-windows-x86_64.exe#/vertd.exe"
            }
        }
